# AoWoW Database Generation Environment Variables
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# Database Connection Settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=your_password_here

# AoWoW Database
AOWOW_DB_NAME=tmp_aowow
AOWOW_DB_PREFIX=aowow_

# World Database
WORLD_DB_NAME=acore_world
WORLD_DB_PREFIX=

# Auth Database
AUTH_DB_NAME=acore_auth
AUTH_DB_PREFIX=

# Characters Database
CHARACTERS_DB_NAME=acore_characters
CHARACTERS_DB_PREFIX=

# Realm Configuration
REALM_ID=1

# Client Data
CLIENT_DATA_VERSION=v16
CLIENT_DATA_URL=https://github.com/wowgaming/client-data/releases/download/v16/data.zip

# Output Configuration
OUTPUT_DIR=.
DUMP_AOWOW=aowow_update.sql
DUMP_WORLD=acore_world.sql
ARCHIVE_NAME=aowow_db.sql.zip

